<Page x:Class="ChartDrawingUiTest.UI.ProgressRing"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChartDrawingUiTest.UI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      d:Background="White"
      Title="ProgressRing">

    <Grid>
        <Grid.Resources>
            <Storyboard x:Key="ProgressRingLoading">
                <DoubleAnimation RepeatBehavior="Forever"
                                 Storyboard.TargetName="ProgressTransform"
                                 Storyboard.TargetProperty="Angle"
                                 To="360" Duration="0:0:2">
                    <DoubleAnimation.EasingFunction>
                        <ExponentialEase EasingMode="EaseInOut"/>
                    </DoubleAnimation.EasingFunction>
                </DoubleAnimation>
            </Storyboard>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="&#xF16A;" FontFamily="Segoe MDL2 Assets" FontSize="40"
                   Foreground="Gray"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   Grid.Column="0" Grid.Row="0">
            <TextBlock.LayoutTransform>
                <RotateTransform x:Name="ProgressTransform1" CenterX=".5" CenterY=".5"/>
            </TextBlock.LayoutTransform>
            <TextBlock.Triggers>
                <EventTrigger RoutedEvent="TextBlock.Loaded">
                    <BeginStoryboard>
                        <BeginStoryboard.Storyboard>
                            <Storyboard>
                                <DoubleAnimation RepeatBehavior="Forever"
                                                 Storyboard.TargetName="ProgressTransform1"
                                                 Storyboard.TargetProperty="Angle"
                                                 To="360" Duration="0:0:2"/>
                            </Storyboard>
                        </BeginStoryboard.Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </TextBlock.Triggers>
        </TextBlock>

        <TextBlock Text="&#xF16A;" FontFamily="Segoe MDL2 Assets" FontSize="40"
                   Foreground="CadetBlue"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   Grid.Column="1" Grid.Row="0">
            <TextBlock.LayoutTransform>
                <RotateTransform x:Name="ProgressTransform2" CenterX=".5" CenterY=".5"/>
            </TextBlock.LayoutTransform>
            <TextBlock.Triggers>
                <EventTrigger RoutedEvent="TextBlock.Loaded">
                    <BeginStoryboard>
                        <BeginStoryboard.Storyboard>
                            <Storyboard>
                                <DoubleAnimation RepeatBehavior="Forever"
                                                 Storyboard.TargetName="ProgressTransform2"
                                                 Storyboard.TargetProperty="Angle"
                                                 To="360" Duration="0:0:2">
                                    <DoubleAnimation.EasingFunction>
                                        <ExponentialEase EasingMode="EaseInOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard.Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </TextBlock.Triggers>
        </TextBlock>

        <TextBlock Text="&#xF16A;" FontFamily="Segoe MDL2 Assets" FontSize="40"
                   Foreground="IndianRed"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   Grid.Column="0" Grid.Row="1">
            <TextBlock.LayoutTransform>
                <RotateTransform x:Name="ProgressTransform3" CenterX=".5" CenterY=".5"/>
            </TextBlock.LayoutTransform>
            <TextBlock.Triggers>
                <EventTrigger RoutedEvent="TextBlock.Loaded">
                    <BeginStoryboard>
                        <BeginStoryboard.Storyboard>
                            <Storyboard>
                                <DoubleAnimation RepeatBehavior="Forever"
                                                 Storyboard.TargetName="ProgressTransform3"
                                                 Storyboard.TargetProperty="Angle"
                                                 To="360" Duration="0:0:2">
                                    <DoubleAnimation.EasingFunction>
                                        <PowerEase EasingMode="EaseInOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard.Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </TextBlock.Triggers>
        </TextBlock>

        <TextBlock Text="&#xF16A;" FontFamily="Segoe MDL2 Assets" FontSize="40"
                   Foreground="GreenYellow"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   Grid.Column="1" Grid.Row="1">
            <TextBlock.LayoutTransform>
                <RotateTransform x:Name="ProgressTransform4" CenterX=".5" CenterY=".5"/>
            </TextBlock.LayoutTransform>
            <TextBlock.Triggers>
                <EventTrigger RoutedEvent="TextBlock.Loaded">
                    <BeginStoryboard>
                        <BeginStoryboard.Storyboard>
                            <Storyboard>
                                <DoubleAnimation RepeatBehavior="Forever"
                                                 Storyboard.TargetName="ProgressTransform4"
                                                 Storyboard.TargetProperty="Angle"
                                                 To="360" Duration="0:0:2">
                                    <DoubleAnimation.EasingFunction>
                                        <BackEase EasingMode="EaseInOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard.Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </TextBlock.Triggers>
        </TextBlock>
    </Grid>
</Page>
