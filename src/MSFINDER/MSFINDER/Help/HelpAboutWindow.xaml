<Window x:Class="Rfx.Riken.OsakaUniv.HelpAboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About MS-FINDER" Width="300" SizeToContent="Height">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Image Source="/Resources/msfinder_icon.png" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,10,10,10" />

        <StackPanel Grid.Row="1" Orientation="Vertical" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Label Content="{Binding Version}" Margin="10,0,0,0" />
            <Label Content="{Binding Date}" Margin="10,0,0,0" />
            <Label Content="Lead developer: Hiroshi Tsugawa" Margin="10,0,0,0" />
            <Label Content="Main contributor: Bujinlkham Buyantogtokh" Margin="10,0,0,0" />
            <Label Content="Contributor: Diego Pedrosa" Margin="10,0,0,0" />
            <Label Content="Contact: msdial-jp-groups@go.tuat.ac.jp" Margin="10,0,0,0" />
        </StackPanel>
    </Grid>
</Window>
