<UserControl x:Class="CompMs.App.Msdial.View.Spectra.SpectraGroupingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:chart="clr-namespace:CompMs.Graphics.Chart;assembly=ChartDrawing"
             xmlns:behavior="clr-namespace:CompMs.Graphics.Behavior;assembly=ChartDrawing"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:CompMs.App.Msdial.ViewModel.Spectra"
             xmlns:model="clr-namespace:CompMs.App.Msdial.Model.Spectra"
             xmlns:component="clr-namespace:CompMs.Common.Components;assembly=Common"
             mc:Ignorable="d"
             d:Background="White"
             d:DataContext="{d:DesignInstance Type={x:Type vm:SpectraGroupingViewModel}}"
             d:DesignHeight="800" d:DesignWidth="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Grid.Resources>
            <Style TargetType="HeaderedContentControl">
                <Setter Property="Margin" Value="8"/>
                <Setter Property="Padding" Value="8"/>
            </Style>
        </Grid.Resources>

        <HeaderedContentControl Header="Molecule group"
                                VerticalAlignment="Stretch"
                                VerticalContentAlignment="Stretch"
                                Grid.Column="0">
            <ListBox ItemsSource="{Binding Path=MoleculeGroups}"
                     SelectedItem="{Binding Path=SelectedMoleculeGroup.Value}"
                     ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListBox.Resources>
                    <HierarchicalDataTemplate DataType="{x:Type model:MoleculeGroupModel}"
                                              ItemsSource="{Binding UniqueMzList}">
                        <TextBlock Text="{Binding Name}"/>
                        <!--<TreeViewItem Header="{Binding Name}" ItemsSource="{Binding UniqueMzList}"/>-->
                    </HierarchicalDataTemplate>
                </ListBox.Resources>
            </ListBox>
        </HeaderedContentControl>

        <HeaderedContentControl Header="Product ion abundance of selected m/z"
                                Grid.Column="1">
            <ItemsControl ItemsSource="{Binding Path=ProductIonAbundances}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <chart:SimpleChartControl>
                            <chart:BarControl ItemsSource="{Binding Path=.}"
                                              HorizontalPropertyName="SampleName"
                                              VerticalPropertyName="Intensity"/>
                        </chart:SimpleChartControl>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </HeaderedContentControl>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <chart:SimpleChartControl HorizontalAxis="{Binding Path=TheoreticalHorizontalAxis}"
                                      VerticalAxis="{Binding Path=TheoreticalVerticalAxis}"
                                      GraphTitle="{Binding Path=SelectedMoleculeGroup.Value.Name}"
                                      Margin="8"
                                      Grid.Row="0">
                <chart:LineSpectrumControlSlim ItemsSource="{Binding Path=TheoreticalSpectra.Value.Spectrum}"
                                               DataType="{x:Type component:SpectrumPeak}"
                                               HorizontalProperty="Mass"
                                               VerticalProperty="Intensity"
                                               VerticalAlignment="Stretch"/>
            </chart:SimpleChartControl>

            <ComboBox ItemsSource="{Binding Path=Samples}"
                      DisplayMemberPath="AnalysisFileName"
                      SelectedItem="{Binding Path=SelectedSample.Value}"
                      Grid.Row="1"/>
            <chart:SimpleChartControl HorizontalAxis="{Binding Path=MeasuredHorizontalAxis}"
                                      VerticalAxis="{Binding Path=MeasuredVerticalAxis}"
                                      Margin="8"
                                      Grid.Row="2">
                <chart:LineSpectrumControlSlim ItemsSource="{Binding Path=MeasuredSpectra.Value.Spectrum}"
                                               DataType="{x:Type component:SpectrumPeak}"
                                               HorizontalProperty="Mass"
                                               VerticalProperty="Intensity"/>
            </chart:SimpleChartControl>

            <GridSplitter Height="2"
                          Background="Gray"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Top"
                          ResizeBehavior="PreviousAndNext"
                          Grid.Row="1"/>
        </Grid>

        <GridSplitter Width="2" Margin="-2,0"
                      Background="Gray"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Stretch"
                      Grid.Column="0"/>

        <GridSplitter Width="2" Margin="-2,0"
                      Background="Gray"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Stretch"
                      Grid.Column="1"/>
    </Grid>
</UserControl>
