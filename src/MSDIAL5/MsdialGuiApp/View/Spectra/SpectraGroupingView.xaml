<UserControl x:Class="CompMs.App.Msdial.View.Spectra.SpectraGroupingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:chart="clr-namespace:CompMs.Graphics.Chart;assembly=ChartDrawing"
             xmlns:axis="clr-namespace:CompMs.Graphics.AxisManager;assembly=ChartDrawing"
             xmlns:behavior="clr-namespace:CompMs.Graphics.Behavior;assembly=ChartDrawing"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:graphio="clr-namespace:CompMs.Graphics.IO;assembly=ChartDrawing"
             xmlns:ui="clr-namespace:CompMs.Graphics.UI;assembly=ChartDrawing"
             xmlns:vm="clr-namespace:CompMs.App.Msdial.ViewModel.Spectra"
             xmlns:model="clr-namespace:CompMs.App.Msdial.Model.Spectra"
             xmlns:component="clr-namespace:CompMs.Common.Components;assembly=Common"
             mc:Ignorable="d"
             d:Background="White"
             d:DataContext="{d:DesignInstance Type={x:Type vm:SpectraGroupingViewModel}}"
             d:DesignHeight="800" d:DesignWidth="1200">
    <UserControl.Resources>
        <ResourceDictionary Source="pack://application:,,,/Msdial;component/View/MainWindowStyle.xaml"/>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Grid.Resources>
            <Style TargetType="HeaderedContentControl">
                <Setter Property="Margin" Value="8"/>
                <Setter Property="Padding" Value="8"/>
            </Style>
        </Grid.Resources>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <DockPanel Grid.Row="0">
                <TextBlock Text="Molecule group" DockPanel.Dock="Top"/>
                <ListBox ItemsSource="{Binding Path=MoleculeGroups}"
                         SelectedItem="{Binding Path=SelectedMoleculeGroup.Value}"
                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBox.Resources>
                        <HierarchicalDataTemplate DataType="{x:Type model:MoleculeGroupModel}"
                                                  ItemsSource="{Binding UniqueMzList}">
                            <TextBlock Text="{Binding Name}"/>
                            <!--<TreeViewItem Header="{Binding Name}" ItemsSource="{Binding UniqueMzList}"/>-->
                        </HierarchicalDataTemplate>
                    </ListBox.Resources>
                </ListBox>
            </DockPanel>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <ComboBox ItemsSource="{Binding Path=SelectedMoleculeGroup.Value.References}"
                          SelectedItem="{Binding Path=SelectedReference.Value}"
                          DisplayMemberPath="Name"
                          Grid.Row="0"/>
                <StackPanel DataContext="{Binding Path=SelectedReference.Value}" Grid.Row="1">
                    <StackPanel.Resources>
                        <Style TargetType="ui:LabeledContent" BasedOn="{StaticResource CopyableDetailContent}">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Setter Property="IsTabStop" Value="False"/>
                            <Style.Triggers>
                                <Trigger Property="Content" Value="">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Resources>
                    <ui:LabeledContent PrependLabel="Ontology:"
                                       Content="{Binding Path=Ontology, Mode=OneWay}"/>
                    <ui:LabeledContent PrependLabel="Formula:"
                                       Content="{Binding Path=Formula.FormulaString, Mode=OneWay}"/>
                    <ui:LabeledContent PrependLabel="InChIKey:"
                                       Content="{Binding Path=InChIKey, Mode=OneWay}"/>
                    <ui:LabeledContent PrependLabel="Ion mode:"
                                       Content="{Binding Path=IonMode, Mode=OneWay}"/>
                    <ui:LabeledContent PrependLabel="Adduct:"
                                       Content="{Binding Path=AdductType, Mode=OneWay}"/>
                    <ui:LabeledContent PrependLabel="Comment:"
                                       Content="{Binding Path=Comment, Mode=OneWay}"/>
                </StackPanel>
                <TextBlock Text="Unique m/z for this group"
                           Grid.Row="2"
                           Margin="0,8,0,0"/>
                <ListBox ItemsSource="{Binding Path=SelectedMoleculeGroup.Value.UniqueMzList}"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         Grid.Row="3"/>
            </Grid>
        </Grid>

        <DockPanel Grid.Column="1">
            <TextBlock DockPanel.Dock="Top" Text="Product ion abundance of selected m/z"/>
            <ScrollViewer>
                <ItemsControl ItemsSource="{Binding Path=ProductIonAbundances.Value}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="8">
                                <Border.Resources>
                                    <axis:CategoryAxisManager x:Key="HorizontalBarsAxis"
                                                              ItemsSource="{Binding Path=Abundances}"
                                                              IdentityPropertyName="SampleName"
                                                              DisplayPropertyName="SampleName"
                                                              ChartMargin="20+"/>
                                    <axis:AutoContinuousAxisManager x:Key="VerticalBarsAxis"
                                                                    ItemsSource="{Binding Path=Abundances}"
                                                                    ValuePropertyName="Intensity"
                                                                    ChartMargin="0+,20+"/>
                                </Border.Resources>
                                <chart:SimpleChartControl Height="240"
                                                          HorizontalAxis="{StaticResource HorizontalBarsAxis}"
                                                          VerticalAxis="{StaticResource VerticalBarsAxis}"
                                                          GraphTitle="{Binding Path=Mz, StringFormat='m/z={0}'}">
                                    <chart:BarControl ItemsSource="{Binding Path=Abundances}"
                                                      HorizontalPropertyName="SampleName"
                                                      VerticalPropertyName="Intensity"/>
                                    <chart:SimpleChartControl.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Save image as..">
                                                <MenuItem Header="Save as emf"
                                                          Command="{x:Static graphio:SaveImageAsCommand.EmfInstance}"
                                                          CommandParameter="{Binding PlacementTarget, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                                <MenuItem Header="Save as png"
                                                          Command="{x:Static graphio:SaveImageAsCommand.PngInstance}"
                                                          CommandParameter="{Binding PlacementTarget, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                            </MenuItem>
                                            <MenuItem Header="Copy image as..">
                                                <MenuItem Header="Copy as emf"
                                                          Command="{x:Static graphio:CopyImageAsCommand.EmfInstance}"
                                                          CommandParameter="{Binding PlacementTarget, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                                <MenuItem Header="Copy as png"
                                                          Command="{x:Static graphio:CopyImageAsCommand.BitmapInstance}"
                                                          CommandParameter="{Binding PlacementTarget, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                            </MenuItem>
                                        </ContextMenu>
                                    </chart:SimpleChartControl.ContextMenu>
                                </chart:SimpleChartControl>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </DockPanel>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.Resources>
                <axis:AutoContinuousAxisManager x:Key="TheoreticalHorizontalAxis"
                                                ItemsSource="{Binding Path=SelectedReference.Value.Spectrum}"
                                                ValuePropertyName="Mass"
                                                ChartMargin="20+"/>
                <axis:AutoContinuousAxisManager x:Key="TheoreticalVerticalAxis"
                                                ItemsSource="{Binding Path=SelectedReference.Value.Spectrum}"
                                                ValuePropertyName="Intensity"
                                                Bounds="0,0"
                                                ChartMargin="0+, 20+"/>
                <axis:AutoContinuousAxisManager x:Key="MeasuredHorizontalAxis"
                                                ItemsSource="{Binding MeasuredSpectra.Value.Spectrum}"
                                                ValuePropertyName="Mass"
                                                ChartMargin="20+"/>
                <axis:AutoContinuousAxisManager x:Key="MeasuredVerticalAxis"
                                                ItemsSource="{Binding MeasuredSpectra.Value.Spectrum}"
                                                ValuePropertyName="Intensity"
                                                Bounds="0,0"
                                                ChartMargin="0+, 20+"/>
            </Grid.Resources>

            <StackPanel>
                <TextBlock Text="Reference spectrum" FontSize="16"
                           Margin="4,0" HorizontalAlignment="Center"/>
                <ComboBox ItemsSource="{Binding Path=SelectedMoleculeGroup.Value.References}"
                          SelectedItem="{Binding Path=SelectedReference.Value}"
                          DisplayMemberPath="Name"/>
            </StackPanel>
            <chart:SimpleChartControl HorizontalAxis="{StaticResource ResourceKey=TheoreticalHorizontalAxis}"
                                      VerticalAxis="{StaticResource ResourceKey=TheoreticalVerticalAxis}"
                                      Margin="8"
                                      Grid.Row="1">
                <Grid>
                    <chart:LineSpectrumControlSlim ItemsSource="{Binding Path=SelectedReference.Value.Spectrum}"
                                                   DataType="{x:Type component:SpectrumPeak}"
                                                   HorizontalProperty="Mass"
                                                   VerticalProperty="Intensity"
                                                   VerticalAlignment="Stretch"/>
                    <chart:Annotator ItemsSource="{Binding Path=SelectedReference.Value.Spectrum}"
                                     HorizontalPropertyName="Mass"
                                     VerticalPropertyName="Intensity"
                                     LabelPropertyName="Mass"
                                     OrderingPropertyName="Intensity"
                                     Overlap="Direct,Horizontal"/>
                </Grid>
                <chart:SimpleChartControl.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Save image as..">
                            <MenuItem Header="Save as emf"
                                      Command="{x:Static graphio:SaveImageAsCommand.EmfInstance}"
                                      CommandParameter="{Binding PlacementTarget, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                            <MenuItem Header="Save as png"
                                      Command="{x:Static graphio:SaveImageAsCommand.PngInstance}"
                                      CommandParameter="{Binding PlacementTarget, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                        </MenuItem>
                        <MenuItem Header="Copy image as..">
                            <MenuItem Header="Copy as emf"
                                      Command="{x:Static graphio:CopyImageAsCommand.EmfInstance}"
                                      CommandParameter="{Binding PlacementTarget, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                            <MenuItem Header="Copy as png"
                                      Command="{x:Static graphio:CopyImageAsCommand.BitmapInstance}"
                                      CommandParameter="{Binding PlacementTarget, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                        </MenuItem>
                    </ContextMenu>
                </chart:SimpleChartControl.ContextMenu>
            </chart:SimpleChartControl>

            <StackPanel Grid.Row="2">
                <TextBlock Text="Observed spectrum" FontSize="16"
                           Margin="4,4" HorizontalAlignment="Center"/>
                <ComboBox ItemsSource="{Binding Path=Samples}"
                          DisplayMemberPath="AnalysisFileName"
                          SelectedItem="{Binding Path=SelectedSample.Value}"/>
            </StackPanel>
            <chart:SimpleChartControl HorizontalAxis="{StaticResource ResourceKey=MeasuredHorizontalAxis}"
                                      VerticalAxis="{StaticResource ResourceKey=MeasuredVerticalAxis}"
                                      Margin="8"
                                      Grid.Row="3">
                <Grid>
                    <chart:LineSpectrumControlSlim ItemsSource="{Binding Path=MeasuredSpectra.Value.Spectrum}"
                                                   DataType="{x:Type component:SpectrumPeak}"
                                                   HorizontalProperty="Mass"
                                                   VerticalProperty="Intensity"/>
                    <chart:Annotator ItemsSource="{Binding Path=MeasuredSpectra.Value.Spectrum}"
                                     HorizontalPropertyName="Mass"
                                     VerticalPropertyName="Intensity"
                                     LabelPropertyName="Mass"
                                     OrderingPropertyName="Intensity"
                                     Overlap="Direct,Horizontal"/>
                </Grid>
                <chart:SimpleChartControl.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Save image as..">
                            <MenuItem Header="Save as emf"
                                      Command="{x:Static graphio:SaveImageAsCommand.EmfInstance}"
                                      CommandParameter="{Binding PlacementTarget, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                            <MenuItem Header="Save as png"
                                      Command="{x:Static graphio:SaveImageAsCommand.PngInstance}"
                                      CommandParameter="{Binding PlacementTarget, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                        </MenuItem>
                        <MenuItem Header="Copy image as..">
                            <MenuItem Header="Copy as emf"
                                      Command="{x:Static graphio:CopyImageAsCommand.EmfInstance}"
                                      CommandParameter="{Binding PlacementTarget, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                            <MenuItem Header="Copy as png"
                                      Command="{x:Static graphio:CopyImageAsCommand.BitmapInstance}"
                                      CommandParameter="{Binding PlacementTarget, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                        </MenuItem>
                    </ContextMenu>
                </chart:SimpleChartControl.ContextMenu>
            </chart:SimpleChartControl>

            <GridSplitter Height="2"
                          Background="Gray"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Top"
                          ResizeBehavior="PreviousAndNext"
                          Grid.Row="2"/>
        </Grid>

        <GridSplitter Width="2" Margin="-2,0"
                      Background="Gray"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Stretch"
                      Grid.Column="0"/>

        <GridSplitter Width="2" Margin="-2,0"
                      Background="Gray"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Stretch"
                      Grid.Column="1"/>
    </Grid>
</UserControl>
