<RibbonTab x:Class="CompMs.App.Msdial.View.RibbonControl.MsdialGraphUtilityTab"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
           xmlns:m="clr-namespace:CompMs.App.Msdial.Model.Chart"
           xmlns:vm="clr-namespace:CompMs.App.Msdial.ViewModel.Chart"
           Header="Utility"
           d:DataContext="{d:DesignInstance Type={x:Type vm:AlignmentPeakPlotViewModel}}"
           mc:Ignorable="d">
    <RibbonGroup Header="Spot color">
        <RibbonComboBox Label="Alignment"
                        SelectionBoxWidth="80"
                        VerticalAlignment="Center">
            <RibbonGallery SelectedValue="{Binding SelectedBrush.Value}">
                <RibbonGalleryCategory ItemsSource="{Binding Brushes}"
                                       DisplayMemberPath="Label"/>
            </RibbonGallery>
        </RibbonComboBox>
    </RibbonGroup>
    <RibbonGroup Header="Scatter axis type">
        <RibbonComboBox Label="Vertical axis"
                        VerticalAlignment="Center">
            <RibbonGallery SelectedItem="{Binding VerticalAxisPropertySelectors.AxisItemSelector.SelectedAxisItem}">
                <RibbonGalleryCategory ItemsSource="{Binding VerticalAxisPropertySelectors.AxisItemSelector.AxisItems}" DisplayMemberPath="Label"/>
            </RibbonGallery>
        </RibbonComboBox>
        <RibbonTextBox DataContext="{Binding VerticalAxisPropertySelectors.AxisItemSelector.SelectedAxisItem}"
                       Label="{Binding Path=ValueLabel}" Text="{Binding Path=Value}">
            <RibbonTextBox.Style>
                <Style TargetType="RibbonTextBox">
                    <Setter Property="Visibility" Value="visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Value, FallbackValue={x:Null}}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </RibbonTextBox.Style>
        </RibbonTextBox>
    </RibbonGroup>
</RibbonTab>
