        <chart:SimpleChartControl VerticalAxis="{Binding Path=IntensityMapVerticalAxis}"
                                  HorizontalAxis="{Binding Path=IntensityMapHorizontalAxis}"
                                  VerticalTitle="m/z of selected ion"
                                  HorizontalTitle="Scan time"
                                  Background="Black"
                                  Style="{StaticResource ResizableChart}"
                                  Grid.Row="0" Grid.Column="0">
            <chart:HeatmapControl ItemsSource="{Binding Path=LoadedIons.Value, Mode=OneWay}"
