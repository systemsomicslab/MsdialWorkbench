                                        <RotateTransform Angle="-90" CenterY="0.5" CenterX="0.5"/>
                                    </TextBlock.LayoutTransform>
                                </TextBlock>
                                <TextBlock Text="Mass defect"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"
                                           Grid.Column="0" Grid.Row="1">
