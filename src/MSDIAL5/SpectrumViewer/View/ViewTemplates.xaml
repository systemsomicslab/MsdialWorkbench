                                                                 OrderingPropertyName="Intensity"
                                                                 LabelPropertyName="Mass"
                                                                 Format="N4"
                                                                 TopN="10"
                                                                 Brush="{Binding Path=(ItemsControl.AlternationIndex),
                                                                                 RelativeSource={RelativeSource TemplatedParent},
